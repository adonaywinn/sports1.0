                <span class="label-input">E-mail</span>
            </div>
            <div class="content-input">
                <input class="input-login" onfocus="onFocusForm(this, 'João Candido Martins');" onblur="offFocusForm(this, '')"  required type="text" name="usuario">
                <span class="label-input">Nome Completo</span>
            </div>
            <div class="content-input-mid">
                <input class="input-login" onfocus="onFocusForm(this, '00/00/0000');" onblur="offFocusForm(this, '')"  required type="text" name="usuario">
